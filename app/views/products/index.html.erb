<h1>Products</h1>
<p><%= link_to "Add a product", new_product_path %></p>

<p><%= form_tag products_path, method: :get, authentication: false, id: 'search-form' do %>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag "Search" %>
<% end %></p>

<div id="products">
  <%= render @products %>
</div>
