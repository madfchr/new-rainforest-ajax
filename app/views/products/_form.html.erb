<%= form_for(@product) do |f| %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %><br />
  </div>
  <div class="field">
    <%= f.label :price_in_cents %><br />
    <%= f.text_area :price_in_cents %><br />
  </div>
  <div class"actions">
  <%= f.submit %>
  </div>
<% end %>

<% if @product.errors.any? %>
<div id="error_explanation">
  <h2><% pluralize(@product.errors.count, "error") %> Uh oh, looks like something went wrong:</h2>

  <ul>
    <% @product.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>
